<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Ratio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.618:1" //宽长比
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,2:1"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />
    <!--app:layout_constraintEnd_toEndOf 表示右侧-->
    <!--app:layout_constraintStart_toStart 表示左侧-->
    <!--app:layout_constraintDimensionRatio="H,2:1" 表示2:1”表示高：宽 = 2 : 1-->

</android.support.constraint.ConstraintLayout>
