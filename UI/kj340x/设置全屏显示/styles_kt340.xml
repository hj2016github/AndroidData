<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="main_head">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_lv_item_alarm">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--popWindow-->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="popwindow_alarm">
        <item name="android:textColor">#505050</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/popwindw_alarm_btn</item>
    </style>

    <style name="realtime_senortype_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hintColor</item>
        <!--<item name="android:background">@drawable/popwindw_alarm_btn</item>-->
    </style>

    <style name="CustomFastScrollTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fastScrollThumbDrawable">@color/white</item>
        <item name="android:fastScrollOverlayPosition">atThumb</item>
        <item name="android:fastScrollTextColor">@color/white</item>
        <!-- <item name="android:fastScrollTrackDrawable">@drawable/us</item> -->
        <item name="android:fastScrollPreviewBackgroundRight">@color/white</item>
    </style>
</resources>
